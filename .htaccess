
RewriteOptions inherit
<IfModule mod_rewrite.c>

RewriteEngine On

RewriteCond %{REQUEST_FILENAME} !-d 
RewriteCond %{REQUEST_FILENAME}\.php -f 
RewriteRule ^(.*)$ $1.php

RewriteRule ^fale-conosco/enviado?$ /fale-conosco/enviado.php [NC,L]

RewriteRule ^galeria/noticias/([0-9]+)/?$ galeria/noticias/visualizar.php?id_noticia=$1 [NC]

RewriteRule ^galeria/noticias/pagina/([0-9]+)/?$ galeria/noticias/index.php?pagina=$1 [NC]

RewriteRule ^galeria/noticias/categoria/([0-9]+)/?$ galeria/noticias/?id_categoria=$1 [NC]

RewriteRule ^galeria/noticias/categoria/([0-9]+)/([0-9]+)/?$ galeria/noticias/?id_categoria=$1&pagina=$2 [NC]

</IfModule>
